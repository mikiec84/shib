{
    "name": "shib",
    "version": "0.2.0",
    "engines": { "node" : ">= 0.8" },
    "description": "Hive Client Web Application",
    "homepage": "https://github.com/tagomoris/shib",
    "author": "TAGOMORI Satoshi <tagomoris@gmail.com>",
    "keywords": [
        "hive",
        "hadoop"
    ],
    "directories": {
        "lib": "./lib",
        "views": "./views",
        "public": "./public",
        "bin": "./bin"
    },
    "files": [
        "README.md",
        "app.js",
        "config.js"
    ],
    "dependencies": {
        "node-thrift": ">= 1.0.0-dev",
        "sqlite3": ">= 2.1.5",
        "csv": ">= 0.0.13",
        "async": ">= 0.1.22",
        "express": ">= 2.5.9",
        "jade": ">= 0.26.1",
        "presto-client": ">= 0.0.6"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/tagomoris/shib.git"
    },
    "bugs": {
        "url": "https://github.com/tagomoris/shib/issues"
    },
    "licenses": [
        {
            "type": "APLv2"
        }
    ],
    "scripts" : {
        "start": "NODE_PATH=lib forever --minUptime 1000 --spinSleepTime 1000 -a -l forever.log -o logs/shib.out -e logs/shib.err start app.js",
        "stop": "NODE_PATH=lib forever stop app.js"
    },
    "main": "app.js"
}
